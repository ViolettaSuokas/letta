<style is:global>
  .daisy-flower {
    position: absolute;
    inset: 0;
    animation:
      4s cubic-bezier(0, 0.42, 0.38, 1.33) infinite flower-pop,
      30s linear infinite flower;
    z-index: -1;
  }

  li:nth-of-type(1) .daisy-flower {
    animation-delay: 0s, 0s;
  }
  li:nth-of-type(2) .daisy-flower {
    animation-delay: 1s, 0s;
  }
  li:nth-of-type(3) .daisy-flower {
    animation-delay: 2s, 0s;
  }
  li:nth-of-type(4) .daisy-flower {
    animation-delay: 3s, 0s;
  }

  @keyframes flower {
    100% {
      rotate: 1turn;
    }
  }
  @keyframes flower-pop {
    70% {
      scale: 1;
    }
    80% {
      scale: 1.1;
    }
    95% {
      scale: 0.9;
    }
    100% {
      scale: 1;
    }
  }
</style>
