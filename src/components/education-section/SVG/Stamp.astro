<style is:global>
  .edu__stamp {
    height: 112px;
    position: absolute;
    right: 10%;
    bottom: -10%;
    z-index: -1;
  }
  .stamp {
    transform-origin: 40.8px 40.8px;
    animation: rotate 15s linear infinite;
  }
  .ribbon {
    transform-origin: 40.8px 40.8px;
    animation: swing 3s linear infinite;
  }

  li:nth-of-type(2) .ribbon {
    animation-delay: 0.5s;
  }
  li:nth-of-type(3) .ribbon {
    animation-delay: 1s;
  }
  li:nth-of-type(4) .ribbon {
    animation-delay: 1.5s;
  }
  li:nth-of-type(4) .ribbon {
    animation-delay: 2s;
  }

  @keyframes rotate {
    100% {
      transform: rotate(1turn);
    }
  }
  @keyframes swing {
    25% {
      transform: rotate(5deg);
    }
    75% {
      transform: rotate(-5deg);
    }
  }

  @media screen and (max-width: 440px) {
    .edu__stamp {
      height: clamp(56px, 25vw, 112px);
    }
  }
</style>
