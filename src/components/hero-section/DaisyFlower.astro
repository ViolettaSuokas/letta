---
import DaisyFlowerFace from "./SVG/DaisyFlowerFace.astro";
import DaisyFlowerLeafs from "./SVG/DaisyFlowerLeafs.astro";
---

<div class="header__daisy-flower" aria-hidden="true">
  <DaisyFlowerFace />
  <DaisyFlowerLeafs />
</div>

<style>
  .header__daisy-flower {
    grid-column: 11 / 4 span;
    grid-row: 1 / -1;
    justify-self: flex-start;
    align-self: flex-end;
    position: absolute;
    inset-block-start: 65vh;
    inset-inline-start: 10%;
    opacity: 0;
    animation: show-daisy 0.5s cubic-bezier(0, 0.64, 0.1, 1.08) forwards;
    animation-delay: 2s;
    pointer-events: none;
    z-index: -1;
  }

  @keyframes show-daisy {
    0% {
      opacity: 0;
      transform: translateY(10vh) scale(0.1);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* MEDIA QUERIES */
  @media screen and (max-width: 960px) {
    .header__daisy-flower {
      grid-column: 6;
      inline-size: 300px;
      inset-block-start: 65vh;
    }
  }

  @media (max-width: 559px) {
    .header__daisy-flower {
      grid-column: 5;
      inline-size: 200px;
      inset-inline-start: 30%;
    }
  }

  @media only screen and (orientation: landscape) and (max-device-height: 860px) {
    .header__daisy-flower {
      inline-size: 200px;
      inset-block-start: 70vh;
    }
  }
</style>
